<div class="paniel row">
  <div class="main col-md-4">
    <h2>Reservas</h2>
    <div class="field">
      <h3><small>título: </small><%= @reserve.title %></h3>
    </div>
    <div class="field">
      <h3><small>responsável: </small><%= @reserve.user.name %></h3>
    </div>
    <div class="field">
      <h3><small>realização: </small><%= format_time(@reserve) %></h3>
    </div>
    <div class="field">
      <h3><small>tempo de espera: </small><%= how_long(@reserve) %></h3>
    </div>  
    <div class="field">
      <h3><small>descrição: </small><%= @reserve.description %></h3>
    </div>   
    <%= link_to  "Voltar", reservations_path, class:"btn btn-outline-default btn-block" %>
  </div>
  <div class="calendar col-md-8">
    <h2>Calendar</h2>
  </div>
</div>