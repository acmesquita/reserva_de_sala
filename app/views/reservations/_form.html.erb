<form>
  <div class="form-group">
    <label for="titulo">Título</label>
    <input type="text" class="form-control" id="titulo" placeholder="Ex.: Reserva - Catharina">
  </div>
  <div class="form-group">
    <label for="data">Data</label>
    <input type="date" class="form-control" id="data" placeholder="20/11/2019">
  </div>
  <div class="form-group">
    <label for="inicio">Início</label>
    <input type="time" class="form-control" id="inicio" placeholder="09:00">
  </div>
  <div class="form-group">
      <label for="fim">Fim</label>
      <input type="time" class="form-control" id="fim" placeholder="10:00">
    </div>
  <div class="form-group">
    <label for="descricao">Descrição</label>
    <textarea class="form-control" id="descricao" placeholder="Reunião sobre bla blá" cols="10" rows="5"></textarea>
  </div>
  
  <%= link_to  "Adicionar", root_url  , class:"btn btn-outline-primary btn-block" %>

  <div class="opcoes">
      <%= link_to  "Editar", root_url  , class:"btn btn-outline-warning btn-lg" %>
      <%= link_to  "Deletar", root_url  , class:"btn btn-outline-danger btn-lg" %>
    </div>

</form>